<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebSite0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Danylo Dolhopolov</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                        </ul>
                    </div>
                *@
            </div>
        </nav>
    </header>

    <style>
        .button {
            background-color: #4CAF50;
            border: hidden;
            color: white;
            padding: 15px 22px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: default;
        }
    </style>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="leftcol">
                <div class="button">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Projects">Проекты</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Books">Книги</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Portfolio">Портфолио</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Games">Игры</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">Обо мне</a>
                </div>
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Danylo Dolhopolov - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
